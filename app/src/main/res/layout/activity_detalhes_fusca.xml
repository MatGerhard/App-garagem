<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".DetalhesFuscaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_detalhesFusca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detalhesFusca"
                android:textAlignment="center"
                android:textColor="@color/thistle"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_motorFusca"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:src="@drawable/fusca_engine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_detalhesFusca" />

            <TextView
                android:id="@+id/tv_dadosFusca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Motor boxer\nLongitudinal\n1600cc\n60cv\n11kgfm\n\n"
                android:textAlignment="center"
                android:textColor="@color/thistle"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_motorFusca" />

            <TextView
                android:id="@+id/tv_cockpit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cockpit"
                android:textAlignment="center"
                android:textColor="@color/thistle"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_dadosFusca" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/fusca_interior"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_cockpit" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>