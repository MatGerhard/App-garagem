<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".DetalhesSkylineActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_detalhesSkyline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detalhesSkyline"
                android:textAlignment="center"
                android:textColor="@color/thistle"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_motorSkyline"
                android:layout_width="0dp"
                android:layout_height="450dp"
                android:src="@drawable/skyline_engine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_detalhesSkyline" />

            <TextView
                android:id="@+id/tv_dadosSkyline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Motor 6 cil. em linha\nLongitudinal\n3000cc\n320cv\n384Nm\n\n"
                android:textAlignment="center"
                android:textColor="@color/thistle"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_motorSkyline" />

            <TextView
                android:id="@+id/tv_cockpit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cockpit"
                android:textAlignment="center"
                android:textColor="@color/thistle"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_dadosSkyline" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/skyline_interior"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_cockpit" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>